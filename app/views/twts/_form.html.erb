<%= simple_form_for(@twt) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :twt, label: "Twt about it!", input_html: { class: "textarea" }, wrapper: false, label_html: {class: "label"}, placeholder: "Compose new twt" %>
    </div>
    <%= f.button :submit, class: 'btn btn-info', id: "submit" %>
  </div>
<% end %>
